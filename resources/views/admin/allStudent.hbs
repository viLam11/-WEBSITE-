<div class="sub-header bg-[url('https://project-ltnc.vercel.app/assets/img/sub-header.jpg')] w-full h-[200px]">
    <div class="sub-header__title text-[50px] flex justify-center items-center h-full text-white">DANH SÁCH TẤT CẢ HỌC SINH</div>
</div>


<table class="table container mx-auto sm:px-0 px-[16px] mb-[50px] text-center my-[50px] text-[18px]">
    <thead>
        <tr>
        <th scope="col" class="border-[2px]">STT</th>
        <th scope="col" class="border-[2px]">MSSV</th>
        <th scope="col" class="border-[2px]">Tên</th>
        <th scope="col" class="border-[2px]">Khoa - Ngành</th>
        <th scope="col" class="border-[2px]">Gmail</th>
        <th scope="col" class="border-[2px]">Bảng điểm</th>
        <th scope="col" class="border-[2px]">Hồ sơ cá nhân</th>
        </tr>
    </thead>

    <tbody>
        {{#each students}}
            <tr>
            <th scope="row" class="border-[2px]">{{sum @index 1}}</th>
            <td class="border-[2px]">{{this.ID}}</td>
            <td class="border-[2px]">{{this.name}}</td>
            <td class="border-[2px]">{{this.major}}</td>
            <td class="border-[2px]">{{this.email}}</td>
            <td class="border-[2px]"><a href="/admin/stuScore/{{this.ID}}/{{../ID}}">chi tiết</a></td>
            <td class="border-[2px]"><a href="/admin/stuInfo/{{this.ID}}/{{../ID}}">thông tin</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>
