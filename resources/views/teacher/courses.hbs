<div class="sub-header bg-[url('https://project-ltnc.vercel.app/assets/img/sub-header.jpg')] w-full h-[200px]">
  <div class="sub-header__title text-[50px] flex justify-center items-center h-full text-white">QUẢN LÝ KHÓA HỌC</div>
</div>
<div class="my-[40px]">
    <div class="container mx-auto sm:px-0 px-[16px]">
        <div>
            <h1 class="text-[20px] font-bold mb-[20px]">KHÓA HỌC ĐANG GIẢNG DẠY</h1>
            <h2 class="text-[20px] font-bold mb-[30px]">GIẢNG VIÊN: {{teacher.name}}</h2>
        </div>
        <div class="grid lg:grid-cols-3 grid-cols-2 gap-[10px]">
            {{#each courses}}
                <div class="text-[18px] text-center bg-[#003459] text-white rounded-[20px] mb-[10px] pb-[10px]">
                    <a href="/teacher/{{this.courseID}}/{{../ID}}">
                        <img src="{{this.thumnail}}" class="my-[10px] p-[10px] w-full h-auto" alt="...">
                        <h5 class="md:text-[18px] text-[14px]">{{this.name}}</h5>
                        <p class="my-[10px] md:text-[18px] text-[14px]">{{this.description}}</p>
                        <a href="/teacher/{{this.courseID}}/{{../ID}}" class="bg-sky-500/75 py-[10px] px-[20px] rounded-[10px]" >Chi tiết</a>
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>
